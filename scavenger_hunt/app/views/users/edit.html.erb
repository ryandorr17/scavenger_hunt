<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <div class="panel sign-up">
        <h2>Edit Team Info</h2>

        <%= form_for(@user) do |f| %>

          <div class="field">
            <%= f.label :team_name %><br />
            <%= f.text_field :team, autofocus: true %>
          </div>

          <div class="field">
            <%= f.label :player_one_name %><br />
            <%= f.text_field :name, autofocus: true %>
          </div>

          <div class="field">
            <%= f.label :player_two_name %><br />
            <%= f.text_field :second_name, autofocus: true %>
          </div>

          <div class="field">
            <%= f.label :email %><br />
            <%= f.email_field :email, autofocus: true %>
          </div>

          <div class="field">
            <%= f.label :spectator, class: "checkbox inline" do %><br />
            <%= f.check_box :spectator, autofocus: true %>
            <span>I would like to participate as a spectator/helper</span>
            <% end %>
          </div>




          <div class="actions">
            <%= f.submit "Update" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
